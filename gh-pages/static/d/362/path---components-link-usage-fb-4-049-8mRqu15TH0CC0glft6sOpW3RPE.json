{"data":{"markdownRemark":{"htmlAst":{"type":"root","children":[{"type":"element","tagName":"h2","properties":{},"children":[{"type":"text","value":"Link text"}]},{"type":"text","value":"\n"},{"type":"element","tagName":"ul","properties":{},"children":[{"type":"text","value":"\n"},{"type":"element","tagName":"li","properties":{},"children":[{"type":"text","value":"Use text for links rather than graphics or icons."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"li","properties":{},"children":[{"type":"text","value":"Links should be three words or less."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"li","properties":{},"children":[{"type":"text","value":"Text should be consistent with the title of the intended destination."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"li","properties":{},"children":[{"type":"text","value":"Use caution with links that are several words long. It is recommended that links are long enough to be understood by the user, but short enough to prevent text wrapping."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"li","properties":{},"children":[{"type":"text","value":"Avoid the term “Click here,” other links to “here,” or the web address itself."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"li","properties":{},"children":[{"type":"text","value":"Instead, use a meaningful descriptive label for the link, and match the destination site name."}]},{"type":"text","value":"\n"}]}],"data":{"quirksMode":false}},"fields":{"slug":"/components/link/usage","currentPage":"usage"},"frontmatter":{"title":"Link","label":"Component","tabs":["Code","Usage","Style"]}}},"pageContext":{"slug":"/components/link/usage","currentPage":"usage"}}